<?xml version="1.0"?>
<PropertyList>

 <path>alt.ac</path>

<!-- Turn on light with light switch -->

 <animation>
  <type>material</type>
    <object-name>AltFace.002</object-name> 
    <object-name>altdig1</object-name>
    <object-name>altdig2</object-name>
    <object-name>altdig20s</object-name>
    <object-name>altdig3</object-name>
