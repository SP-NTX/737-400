<!-- Pick animation for adjusting the baro datum -->
<animation>
	<type>pick</type>
	<object-name>baroknob</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/altimeter/setting-inhg</property>
			<step>0.01</step>
			<min>25.00</min>
			<max>35.00</max>
			<wrap>false</wrap>
		</binding>	
	</action>
	<action>
		<button>1</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/altimeter/setting-inhg</property>
			<step>-0.01</step>
			<min>25.00</min>
			<max>35.00</max>
			<wrap>false</wrap>
		</binding>		
	</action>
	<action>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/altimeter/setting-inhg</property>
			<step>0.09</step>
			<min>25.00</min>
			<max>35.00</max>
			<wrap>false</wrap>
		</binding>	
	</action>
	<action>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/altimeter/setting-inhg</property>
			<step>-0.09</step>
