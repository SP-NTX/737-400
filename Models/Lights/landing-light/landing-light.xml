<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

  <path>landing-light.ac</path>

    <animation>
        <type>select</type>
        <object-name>RHLND.spot</object-name>
        <condition>
            <and>
	            	<equals>
	                    <property>controls/lighting/landing-lights-fixed-right</property>
	                    <value>true</value>
	            	</equals>
                <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
              <property>systems/electrical/on</property>
            </and>
        </condition>
    </animation>

	
    <animation>
        <type>select</type>
        <object-name>CTRLND.spot</object-name>
        <condition>
            <and>
						  <or>
            	 	<equals>
	                    <property>controls/lighting/landing-lights-retract-left</property>
	                    <value>true</value>
	            	</equals>
            	 	<equals>
	                    <property>controls/lighting/landing-lights-retract-right</property>
	                    <value>true</value>
	            	</equals>
              </or>
            	  <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>1.0</value>
                </equals>
                <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
              <property>systems/electrical/on</property>
            </and>
        </condition>
    </animation>

    
	
    <animation>
        <type>select</type>
        <object-name>LHLND.spot</object-name>
        <condition>
            <and>
            	 	<equals>
	                    <property>controls/lighting/landing-lights-fixed-left</property>
	                    <value>true</value>
	            	</equals>
            	  <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
              <property>systems/electrical/on</property>
            </and>
        </condition>
    </animation>
    
