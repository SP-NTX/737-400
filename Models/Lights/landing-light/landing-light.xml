	  <!-- pitch -->
  <animation>
    <type>rotate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
   <property>position/altitude-agl-ft</property>
   <factor> -0.3 </factor>
   <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
   </center>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

      <animation>
            <type>dist-scale</type>
	        <object-name>RHLND.spot</object-name>
	        <object-name>LHLND.spot</object-name>
	        <object-name>CTRLND.spot</object-name>
            <interpolation>
                  <entry>
                        <ind> 0 </ind>
                        <dep> 1 </dep>
                  </entry>
                  <entry>
                        <ind> 20 </ind>
                        <dep> 1.5 </dep>
                  </entry>
                  <entry>
                        <ind> 1500 </ind>
                        <dep> 15.00 </dep>
                  </entry>
            </interpolation>
      </animation>
      

</PropertyList>
